{
  "name": "create-react-webpack-app",
  "version": "0.0.1",
  "description": "An initial set up for react and webpack using single command",
  "main": "./index.js",
  "bin": "bin/index.js",
  "scripts": {
    "build": "rm -rf public && tsc",
    "dev": "nodemon --watch 'src/' --exec 'ts-node' src/index.ts",
    "lint": "eslint src/* --ext .ts",
    "lint:fix": "eslint --fix src/* --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrijshikhar/create-react-webpack-app.git"
  },
  "keywords": [
    "React",
    "Webpack"
  ],
  "author": "Adrij Shikhar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adrijshikhar/create-react-webpack-app/issues"
  },
  "homepage": "https://github.com/adrijshikhar/create-react-webpack-app#readme",
  "dependencies": {
    "@types/node": "^14.0.26"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix src/* --ext .ts"
    ]
  }
}
